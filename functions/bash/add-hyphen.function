function add-hyphen (){
    if [[ "$(echo "$1" |grep -c "-")"         -eq 0 ]] &&
       [[ "$(echo "$1" |tr -d 0-9)"           != "" ]] &&
       [[ "$(echo "$1" |tr -d A-z )"          != "" ]] &&
       [[ "$(echo "$1" |tr -d A-z |tr -d 0-9)" = "" ]] ;then
        echo "$(echo "$1" |tr -d 0-9 |tr a-z A-Z)"-"$(echo "$1" |tr -d A-z)"
    fi
    return 0
}

