get-paru (){
    sudo pacman -S --needed  base-devel git bat asp devtools
    git clone https://aur.archlinux.org/paru.git
    cd ./paru
    makepkg -Ccsi
    cd ..
    rm -fr ./paru
    mkdir -p $HOME/.config/paru
    cat << '__PARU__' >$HOME/.config/paru/paru.conf
[options]
BottomUp
CleanAfter
PgpFetch
RemoveMake
SortBy = popularity
CompletionInterval = 3
NoWarn = *
SkipReview
[bin]
Sudo = /usr/bin/doas
MFlags = ' -Cc  '
__PARU__
    return 0
}
