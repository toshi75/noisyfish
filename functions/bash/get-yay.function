get-yay (){
    sudo pacman -S --needed --noconfirm base-devel git
    git clone https://aur.archlinux.org/yay-bin
    cd ./yay-bin
    makepkg -Ccsi
    cd ..
    rm -fr ./yay-bin
    yay --save --nodiffmenu --removemake \
        --mflags ' -Cc '    --useask     \
        --sudo /usr/bin/doas
    return 0
}
