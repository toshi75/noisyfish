function mkman (){
    help2man --section=1 --help-option="$2" \
             --locale='ja_JP.UTF-8' -o "$(pwd)"/"$1".1 "$1"
    gzip "$(pwd)"/"$1".1
    man "$(pwd)"/"$1".1.gz
    echo "Send to \"/usr/share/man/ja_JP.UTF-8/man1\" ??"
    local ANS
    read -p '    y/N >' -n1 ANS
    echo ""
    case $ANS in
        Y|y)    sudo mv -i "$(pwd)"/"$1".1.gz \
                        -t "/usr/share/man/ja_JP.UTF-8/man1"    ;;
        *)      :   ;;
    esac
    return 0
}

