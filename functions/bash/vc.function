function vc (){
    if ( which "$1" &>/dev/null ) ;then
        if [[ "$(file -b --mime-type "$(which "$1")")" \
               = "text/x-shellscript" ]] ;then
            less "$(which "$1")"
        else
            echo "Found $(which "$1"),"
            echo "but NOT \"text/x-shellscript\"."
        fi
    else
        echo "Not found."
        if ( type "$1" &>/dev/null ) ;then
            echo "But, it's $(type -t "$1")"
        fi

    fi
    return 0
}
  
